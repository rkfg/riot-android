        <!-- NavigationView color-->
        <!-- Items from the NavigationView -->
        <item name="vector_4d_gray">#FF4D4D4D</item>

        <!-- FloatingActionButton -->
        <item name="vector_fuchsia_color">#ff0064</item>

        <!-- The display name of senders in the room overview -->
        <item name="vector_text_gray_color">#a0a29f</item>

        <!-- tabbar underline -->
        <!-- Separator between People and Files items in Room Details -->
        <item name="vector_dc_gray">#565656</item>

        <!-- room members list -->
        <!-- Display names of the room members -->
        <item name="vector_21_black">#A4A4A4</item>
