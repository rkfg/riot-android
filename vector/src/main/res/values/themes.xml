    <style name="Theme.Vector.Dark.Common" parent="Theme.Vector.Dark.Base">
        <!-- Background color of the room -->
        <item name="room_background">#2d2d2d</item>

        <item name="presence_online">#38af00</item>
        <item name="presence_unavailable">#fc0</item>
        <item name="presence_offline">#E53333</item>

        <item name="member_list_last_seen_text">#aaa</item>

        <item name="chat_gray_text">#FFAAAAAA</item>
        <item name="chat_encoding_background">#AAAAAAAA</item>
